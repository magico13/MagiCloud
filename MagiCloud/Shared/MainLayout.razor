@inherits LayoutComponentBase

<Layout>
    <Layout>
        <LayoutHeader Background="Background.Primary">
            <Heading Color="TextColor.White">
                <Container>
                    <Span>
                        <Anchor To="/" TextColor=TextColor.Body Style="text-decoration:none">MagiCloud</Anchor>
                        <Anchor To="/trash" TextColor=TextColor.Warning Style="text-decoration:none"><Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.TrashAlt" IconStyle="IconStyle.Regular"/></Anchor>
                        <Anchor To="/chat" TextColor=TextColor.White Style="text-decoration:none"><Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Comments" IconStyle="IconStyle.Regular"/></Anchor>
                        <LoginDisplay />
                    </Span>
                </Container>
            </Heading>
        </LayoutHeader>
        <LayoutContent Background="Background.Body">
            <Container>
                @Body
            </Container>
        </LayoutContent>
    </Layout>
</Layout>