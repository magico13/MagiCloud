<AuthorizeView>
    <Authorized>
        <Button Type=ButtonType.Link To="Identity/Account/Manage" Color=Color.Primary Float=Float.End>Hello, @context.User.Identity?.Name!</Button>
        <Form method="post" action="Identity/Account/LogOut" Float=Float.End>
            <Button Type=ButtonType.Submit class="nav-link btn btn-link">Log out</Button>
        </Form>
    </Authorized>
    <NotAuthorized>
        <Button Type=ButtonType.Link To="Identity/Account/Register" Color=Color.Primary Float=Float.End>Register</Button>
        <Button Type=ButtonType.Link To="Identity/Account/Login" Color=Color.Info Float=Float.End>Log in</Button>
    </NotAuthorized>
</AuthorizeView>
